        <ImageView
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shield" />

        <ImageView
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_marginLeft="10dp"
            android:background="@drawable/store" />


    </LinearLayout>


</LinearLayout>