                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="50px">

                    <ImageView
                        android:layout_width="200px"
                        android:layout_height="200px"
